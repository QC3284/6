{
  "$schema": "https://vercel.com/schemas/vercel.json",
  "builds": [
    {
      "src": "/*",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/gh/:user/:repo@:branch/(.*)",
      "destination": "https://raw.githubusercontent.com/:user/:repo/:branch/$1"
    },
    {
      "source": "/npm/(.*)",
      "destination": "https://unpkg.com/$1"
    }
  ],
  "headers": [
    {
      "source": "/gh/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=3600" },
        { "key": "Access-Control-Allow-Origin", "value": "*" }
      ]
    },
    {
      "source": "/npm/(.*@[0-9].*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000" },
        { "key": "Access-Control-Allow-Origin", "value": "*" }
      ]
    },
    {
      "source": "/npm/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=3600" },
        { "key": "Access-Control-Allow-Origin", "value": "*" }
      ]
    }
  ]
}
