{
  "$schema": "https://vercel.com/schemas/vercel.json",
  "builds": [
    {
      "src": "api/gh-proxy.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/gh/(?<user>[^/]+)/(?<repo>[^/]+)@(?<branch>[^/]+)/(?<path>.*)",
      "dest": "/api/gh-proxy?user=$user&repo=$repo&branch=$branch&path=$path"
    },
    {
      "src": "/npm/(.*)",
      "dest": "https://unpkg.com/$1",
      "headers": {
        "Cache-Control": "public, max-age=3600",
        "Access-Control-Allow-Origin": "*"
      }
    }
  ]
}
