{
  "version": 2,
  "builds": [{
    "src": "api/proxy.js",
    "use": "@vercel/node",
    "config": {
      "maxDuration": 10,     // 缩短超时时间
      "includeFiles": "node_modules/undici"  // 优化 fetch 实现
    }
  }],
  "routes": [{
    "src": "/(.*)",
    "dest": "/api/proxy?url=https://cdn.xcqcoo.top/$1",
    "headers": {
      "Cache-Control": "public, max-age=600"  // 减少回源频率
    }
  }]
}
